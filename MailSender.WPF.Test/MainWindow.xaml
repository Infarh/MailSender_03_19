<Window x:Class="MailSender.WPF.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:MailSender.WPF.Test"
        xmlns:vm="clr-namespace:MailSender.WPF.Test.ViewModels"
        Title="{Binding Title}"
        Height="450"
        Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBlock Text="{Binding Title.Length}"/>

        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
            Width="400" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50"/>  

        <Button VerticalAlignment="Top" HorizontalAlignment="Right"
                Content="Exit" Command="{Binding ExitCommand}"/>
    </Grid>
</Window>
